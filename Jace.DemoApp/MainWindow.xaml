<Window x:Class="Jace.DemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator Demo Application" Height="409" Width="500">
    <Grid>
        <Label Content="Formula:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.705,-0.975"/>
        <TextBox x:Name="formulaTextBox" Height="23" Margin="71,13,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="calculateButton" Content="Calculate" Margin="0,41,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="calculateButton_Click"/>
        <Label Content="Tokens:" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,-0.038"/>
        <TextBox x:Name="tokensTextBox" Height="57" Margin="10,99,10,0" TextWrapping="Wrap" VerticalAlignment="Top" IsReadOnly="True"/>
        <Label Content="Abstract Syntax Tree:" HorizontalAlignment="Left" Margin="10,161,0,0" VerticalAlignment="Top"/>
        <TreeView x:Name="astTreeView" Margin="10,192,10,69"/>
        <TextBox x:Name="resultTextBox" Margin="11,0,10,10" TextWrapping="Wrap" Height="23" VerticalAlignment="Bottom" IsReadOnly="True"/>
        <Label Content="Result:" HorizontalAlignment="Left" Margin="11,0,0,38" Height="26" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
